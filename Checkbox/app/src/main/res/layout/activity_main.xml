<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="checkbox.cursoandroid.com.checkbox.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Quais animais de estimação você tem?"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/caoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cão"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gatoId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_editor_absoluteX="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/gatoId"
        android:layout_alignStart="@+id/gatoId"
        android:layout_marginTop="24dp" />

    <CheckBox
        android:id="@+id/gatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gato"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_below="@+id/caoId"
        android:layout_alignLeft="@+id/papagaioId"
        android:layout_alignStart="@+id/papagaioId"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/botaoMostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/papagaioId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Mostrar"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="255dp" />

    <TextView
        android:id="@+id/mostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoMostrarId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Mostrar....."
        android:textSize="20sp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="356dp" />

    <CheckBox
        android:id="@+id/papagaioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:text="Papagaio"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gatoId"
        app:layout_constraintVertical_bias="0.018"
        tools:layout_editor_absoluteX="43dp"
        android:layout_below="@+id/gatoId"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp" />
</RelativeLayout>
